<nav class="navigation">
  <ul class="navigation__list">
    <% if (menuLinks.length > 0) { %> <% menuLinks.forEach(link => { %>
    <li class="navigation__item">
      <a
        class="navigation__link <%= activeLinkPath === link.path ? 'navigation__link--active' : '' %>"
        href="<%= link.path %>"
      >
        <%= link.label %>
      </a>
    </li>
    <% }); %> <% } %>
    <li class="navigation__item navigation__cart">
      Cart
      <img alt="Cart" class="navigation__cart" src="https://cdn.jsdelivr.net/npm/lucide-static@latest/icons/shopping-cart.svg">
      <span class="navigation__badge" style="<%= cartCount ? 'display: inline-block;' : '' %>"><%= cartCount %></span>
    </li>
  </ul>
</nav>